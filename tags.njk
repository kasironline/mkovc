---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/home.njk
eleventyComputed:
  title:  “{{ tag }}”
permalink: /tags/{{ tag | slug }}/
---
<div class="container">
<div class="row">
<div class="col-md-12 p-3 p-md-5">
{% set postslist = collections[ tag ] %}
{% include "tag.njk" %}
</div>
<div class="col-md-12 p-1 mb-5 text-center">
<p><a href="{{ '/tags/' | url }}" class="btn btn-outline-dark">Explore all hastags</a></p>
</div>
</div>
</div>